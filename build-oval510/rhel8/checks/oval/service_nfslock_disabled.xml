<def-group>

  

  

  <definition class="compliance" id="service_nfslock_disabled" version="2">
    <metadata>
        <title>Disable Network File System Lock Service (nfslock)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The nfslock service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package nfs-utils removed or service and socket nfslock are not configured to start" operator="OR">
      <criterion comment="nfs-utils removed" test_ref="test_service_nfslock_package_nfs-utils_removed" />
      <criteria operator="AND" comment="service and socket nfslock are disabled">
        <criterion comment="nfslock disabled in multi-user.target" test_ref="test_nfslock_disabled_multi_user_target" />
        <criterion comment="nfslock socket disabled in sockets.target" test_ref="test_nfslock_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for nfslock.service in /etc/systemd/system/multi-user.target.wants"
   id="test_nfslock_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_nfslock_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for nfslock.service in /etc/systemd/system/multi-user.target.wants"
   id="object_nfslock_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/nfslock.service</unix:filepath>
    <filter action="include">unit_nfslock_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for nfslock.socket in /etc/systemd/system/sockets.target.wants"
   id="test_nfslock_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_nfslock_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for nfslock.socket in /etc/systemd/system/sockets.target.wants"
   id="object_nfslock_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/nfslock.socket</unix:filepath>
    <filter action="include">unit_nfslock_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_nfslock_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_nfslock_package_nfs-utils_removed" version="1"
  comment="package nfs-utils is removed">
    <linux:object object_ref="obj_test_service_nfslock_package_nfs-utils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_nfslock_package_nfs-utils_removed" version="1">
    <linux:name>nfs-utils</linux:name>
  </linux:rpminfo_object>


</def-group>