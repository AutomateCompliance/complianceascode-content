<def-group>





  <definition class="compliance" id="timer_dnf-automatic_enabled" version="1">
    <metadata>
        <title>Enable dnf-automatic Timer</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 8</platform>
    </affected>
        <description>The dnf-automatic service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package dnf-automatic installed and timer dnf-automatic is configured to start" operator="AND">
      <extend_definition comment="dnf-automatic installed" definition_ref="package_dnf-automatic_installed" />
      <criterion comment="dnf-automatic enabled in multi-user.target" test_ref="test_dnf-automatic_enabled_multi_user_target" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist"
   comment="look for dnf-automatic.timer in /etc/systemd/system/multi-user.target.wants"
   id="test_dnf-automatic_enabled_multi_user_target" version="1">
    <unix:object object_ref="object_dnf-automatic_enabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for dnf-automatic.timer in /etc/systemd/system/multi-user.target.wants"
   id="object_dnf-automatic_enabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/dnf-automatic.timer</unix:filepath>
    <filter action="include">unit_dnf-automatic_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_dnf-automatic_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>



</def-group>