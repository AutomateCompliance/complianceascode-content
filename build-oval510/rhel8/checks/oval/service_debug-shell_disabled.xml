<def-group>

  

  

  <definition class="compliance" id="service_debug-shell_disabled" version="2">
    <metadata>
        <title>Disable debug-shell SystemD Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The debug-shell service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package systemd removed or service and socket debug-shell are not configured to start" operator="OR">
      <criterion comment="systemd removed" test_ref="test_service_debug-shell_package_systemd_removed" />
      <criteria operator="AND" comment="service and socket debug-shell are disabled">
        <criterion comment="debug-shell disabled in multi-user.target" test_ref="test_debug-shell_disabled_multi_user_target" />
        <criterion comment="debug-shell socket disabled in sockets.target" test_ref="test_debug-shell_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for debug-shell.service in /etc/systemd/system/multi-user.target.wants"
   id="test_debug-shell_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_debug-shell_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for debug-shell.service in /etc/systemd/system/multi-user.target.wants"
   id="object_debug-shell_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/debug-shell.service</unix:filepath>
    <filter action="include">unit_debug-shell_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for debug-shell.socket in /etc/systemd/system/sockets.target.wants"
   id="test_debug-shell_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_debug-shell_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for debug-shell.socket in /etc/systemd/system/sockets.target.wants"
   id="object_debug-shell_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/debug-shell.socket</unix:filepath>
    <filter action="include">unit_debug-shell_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_debug-shell_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_debug-shell_package_systemd_removed" version="1"
  comment="package systemd is removed">
    <linux:object object_ref="obj_test_service_debug-shell_package_systemd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_debug-shell_package_systemd_removed" version="1">
    <linux:name>systemd</linux:name>
  </linux:rpminfo_object>


</def-group>