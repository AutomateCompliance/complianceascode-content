<def-group>

  

  

  <definition class="compliance" id="service_dovecot_disabled" version="2">
    <metadata>
        <title>Disable Dovecot Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The dovecot service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package dovecot removed or service and socket dovecot are not configured to start" operator="OR">
      <criterion comment="dovecot removed" test_ref="test_service_dovecot_package_dovecot_removed" />
      <criteria operator="AND" comment="service and socket dovecot are disabled">
        <criterion comment="dovecot disabled in multi-user.target" test_ref="test_dovecot_disabled_multi_user_target" />
        <criterion comment="dovecot socket disabled in sockets.target" test_ref="test_dovecot_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for dovecot.service in /etc/systemd/system/multi-user.target.wants"
   id="test_dovecot_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_dovecot_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for dovecot.service in /etc/systemd/system/multi-user.target.wants"
   id="object_dovecot_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/dovecot.service</unix:filepath>
    <filter action="include">unit_dovecot_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for dovecot.socket in /etc/systemd/system/sockets.target.wants"
   id="test_dovecot_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_dovecot_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for dovecot.socket in /etc/systemd/system/sockets.target.wants"
   id="object_dovecot_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/dovecot.socket</unix:filepath>
    <filter action="include">unit_dovecot_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_dovecot_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_dovecot_package_dovecot_removed" version="1"
  comment="package dovecot is removed">
    <linux:object object_ref="obj_test_service_dovecot_package_dovecot_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_dovecot_package_dovecot_removed" version="1">
    <linux:name>dovecot</linux:name>
  </linux:rpminfo_object>


</def-group>