<def-group>

  

  

  <definition class="compliance" id="service_tftp_disabled" version="2">
    <metadata>
        <title>Disable tftp Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The tftp service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package tftp-server removed or service and socket tftp are not configured to start" operator="OR">
      <criterion comment="tftp-server removed" test_ref="test_service_tftp_package_tftp-server_removed" />
      <criteria operator="AND" comment="service and socket tftp are disabled">
        <criterion comment="tftp disabled in multi-user.target" test_ref="test_tftp_disabled_multi_user_target" />
        <criterion comment="tftp socket disabled in sockets.target" test_ref="test_tftp_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for tftp.service in /etc/systemd/system/multi-user.target.wants"
   id="test_tftp_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_tftp_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for tftp.service in /etc/systemd/system/multi-user.target.wants"
   id="object_tftp_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/tftp.service</unix:filepath>
    <filter action="include">unit_tftp_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for tftp.socket in /etc/systemd/system/sockets.target.wants"
   id="test_tftp_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_tftp_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for tftp.socket in /etc/systemd/system/sockets.target.wants"
   id="object_tftp_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/tftp.socket</unix:filepath>
    <filter action="include">unit_tftp_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_tftp_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_tftp_package_tftp-server_removed" version="1"
  comment="package tftp-server is removed">
    <linux:object object_ref="obj_test_service_tftp_package_tftp-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_tftp_package_tftp-server_removed" version="1">
    <linux:name>tftp-server</linux:name>
  </linux:rpminfo_object>


</def-group>