<def-group>

  

  

  <definition class="compliance" id="service_acpid_disabled" version="2">
    <metadata>
        <title>Disable Advanced Configuration and Power Interface (acpid)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The acpid service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package acpid removed or service and socket acpid are not configured to start" operator="OR">
      <criterion comment="acpid removed" test_ref="test_service_acpid_package_acpid_removed" />
      <criteria operator="AND" comment="service and socket acpid are disabled">
        <criterion comment="acpid disabled in multi-user.target" test_ref="test_acpid_disabled_multi_user_target" />
        <criterion comment="acpid socket disabled in sockets.target" test_ref="test_acpid_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for acpid.service in /etc/systemd/system/multi-user.target.wants"
   id="test_acpid_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_acpid_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for acpid.service in /etc/systemd/system/multi-user.target.wants"
   id="object_acpid_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/acpid.service</unix:filepath>
    <filter action="include">unit_acpid_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for acpid.socket in /etc/systemd/system/sockets.target.wants"
   id="test_acpid_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_acpid_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for acpid.socket in /etc/systemd/system/sockets.target.wants"
   id="object_acpid_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/acpid.socket</unix:filepath>
    <filter action="include">unit_acpid_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_acpid_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_acpid_package_acpid_removed" version="1"
  comment="package acpid is removed">
    <linux:object object_ref="obj_test_service_acpid_package_acpid_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_acpid_package_acpid_removed" version="1">
    <linux:name>acpid</linux:name>
  </linux:rpminfo_object>


</def-group>