<def-group>

  

  

  <definition class="compliance" id="service_vsftpd_disabled" version="2">
    <metadata>
        <title>Disable vsftpd Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The vsftpd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package vsftpd removed or service and socket vsftpd are not configured to start" operator="OR">
      <criterion comment="vsftpd removed" test_ref="test_service_vsftpd_package_vsftpd_removed" />
      <criteria operator="AND" comment="service and socket vsftpd are disabled">
        <criterion comment="vsftpd disabled in multi-user.target" test_ref="test_vsftpd_disabled_multi_user_target" />
        <criterion comment="vsftpd socket disabled in sockets.target" test_ref="test_vsftpd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for vsftpd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_vsftpd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_vsftpd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for vsftpd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_vsftpd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/vsftpd.service</unix:filepath>
    <filter action="include">unit_vsftpd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for vsftpd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_vsftpd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_vsftpd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for vsftpd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_vsftpd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/vsftpd.socket</unix:filepath>
    <filter action="include">unit_vsftpd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_vsftpd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_vsftpd_package_vsftpd_removed" version="1"
  comment="package vsftpd is removed">
    <linux:object object_ref="obj_test_service_vsftpd_package_vsftpd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_vsftpd_package_vsftpd_removed" version="1">
    <linux:name>vsftpd</linux:name>
  </linux:rpminfo_object>


</def-group>