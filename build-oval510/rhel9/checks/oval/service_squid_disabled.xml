<def-group>

  

  

  <definition class="compliance" id="service_squid_disabled" version="2">
    <metadata>
        <title>Disable Squid</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The squid service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package squid removed or service and socket squid are not configured to start" operator="OR">
      <criterion comment="squid removed" test_ref="test_service_squid_package_squid_removed" />
      <criteria operator="AND" comment="service and socket squid are disabled">
        <criterion comment="squid disabled in multi-user.target" test_ref="test_squid_disabled_multi_user_target" />
        <criterion comment="squid socket disabled in sockets.target" test_ref="test_squid_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for squid.service in /etc/systemd/system/multi-user.target.wants"
   id="test_squid_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_squid_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for squid.service in /etc/systemd/system/multi-user.target.wants"
   id="object_squid_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/squid.service</unix:filepath>
    <filter action="include">unit_squid_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for squid.socket in /etc/systemd/system/sockets.target.wants"
   id="test_squid_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_squid_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for squid.socket in /etc/systemd/system/sockets.target.wants"
   id="object_squid_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/squid.socket</unix:filepath>
    <filter action="include">unit_squid_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_squid_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_squid_package_squid_removed" version="1"
  comment="package squid is removed">
    <linux:object object_ref="obj_test_service_squid_package_squid_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_squid_package_squid_removed" version="1">
    <linux:name>squid</linux:name>
  </linux:rpminfo_object>


</def-group>