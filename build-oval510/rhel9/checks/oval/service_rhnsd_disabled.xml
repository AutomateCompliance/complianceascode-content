<def-group>

  

  

  <definition class="compliance" id="service_rhnsd_disabled" version="2">
    <metadata>
        <title>Disable Red Hat Network Service (rhnsd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rhnsd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rhnsd removed or service and socket rhnsd are not configured to start" operator="OR">
      <criterion comment="rhnsd removed" test_ref="test_service_rhnsd_package_rhnsd_removed" />
      <criteria operator="AND" comment="service and socket rhnsd are disabled">
        <criterion comment="rhnsd disabled in multi-user.target" test_ref="test_rhnsd_disabled_multi_user_target" />
        <criterion comment="rhnsd socket disabled in sockets.target" test_ref="test_rhnsd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rhnsd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_rhnsd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_rhnsd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for rhnsd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_rhnsd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/rhnsd.service</unix:filepath>
    <filter action="include">unit_rhnsd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rhnsd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_rhnsd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_rhnsd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for rhnsd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_rhnsd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/rhnsd.socket</unix:filepath>
    <filter action="include">unit_rhnsd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_rhnsd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rhnsd_package_rhnsd_removed" version="1"
  comment="package rhnsd is removed">
    <linux:object object_ref="obj_test_service_rhnsd_package_rhnsd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rhnsd_package_rhnsd_removed" version="1">
    <linux:name>rhnsd</linux:name>
  </linux:rpminfo_object>


</def-group>