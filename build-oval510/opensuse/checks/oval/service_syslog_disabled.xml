<def-group>

  

  

  <definition class="compliance" id="service_syslog_disabled" version="2">
    <metadata>
        <title>service_syslog_disabled</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The syslog service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rsyslog removed or service and socket syslog are not configured to start" operator="OR">
      <criterion comment="rsyslog removed" test_ref="test_service_syslog_package_rsyslog_removed" />
      <criteria operator="AND" comment="service and socket syslog are disabled">
        <criterion comment="syslog disabled in multi-user.target" test_ref="test_syslog_disabled_multi_user_target" />
        <criterion comment="syslog socket disabled in sockets.target" test_ref="test_syslog_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for syslog.service in /etc/systemd/system/multi-user.target.wants"
   id="test_syslog_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_syslog_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for syslog.service in /etc/systemd/system/multi-user.target.wants"
   id="object_syslog_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/syslog.service</unix:filepath>
    <filter action="include">unit_syslog_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for syslog.socket in /etc/systemd/system/sockets.target.wants"
   id="test_syslog_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_syslog_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for syslog.socket in /etc/systemd/system/sockets.target.wants"
   id="object_syslog_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/syslog.socket</unix:filepath>
    <filter action="include">unit_syslog_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_syslog_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_syslog_package_rsyslog_removed" version="1"
  comment="package rsyslog is removed">
    <linux:object object_ref="obj_test_service_syslog_package_rsyslog_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_syslog_package_rsyslog_removed" version="1">
    <linux:name>rsyslog</linux:name>
  </linux:rpminfo_object>


</def-group>