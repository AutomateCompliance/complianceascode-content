<def-group>

  

  

  <definition class="compliance" id="service_bluetooth_disabled" version="2">
    <metadata>
        <title>Disable Bluetooth Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The bluetooth service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package bluez removed or service and socket bluetooth are not configured to start" operator="OR">
      <criterion comment="bluez removed" test_ref="test_service_bluetooth_package_bluez_removed" />
      <criteria operator="AND" comment="service and socket bluetooth are disabled">
        <criterion comment="bluetooth disabled in multi-user.target" test_ref="test_bluetooth_disabled_multi_user_target" />
        <criterion comment="bluetooth socket disabled in sockets.target" test_ref="test_bluetooth_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for bluetooth.service in /etc/systemd/system/multi-user.target.wants"
   id="test_bluetooth_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_bluetooth_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for bluetooth.service in /etc/systemd/system/multi-user.target.wants"
   id="object_bluetooth_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/bluetooth.service</unix:filepath>
    <filter action="include">unit_bluetooth_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for bluetooth.socket in /etc/systemd/system/sockets.target.wants"
   id="test_bluetooth_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_bluetooth_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for bluetooth.socket in /etc/systemd/system/sockets.target.wants"
   id="object_bluetooth_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/bluetooth.socket</unix:filepath>
    <filter action="include">unit_bluetooth_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_bluetooth_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_bluetooth_package_bluez_removed" version="1"
  comment="package bluez is removed">
    <linux:object object_ref="obj_test_service_bluetooth_package_bluez_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_bluetooth_package_bluez_removed" version="1">
    <linux:name>bluez</linux:name>
  </linux:rpminfo_object>


</def-group>