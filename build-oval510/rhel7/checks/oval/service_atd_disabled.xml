<def-group>

  

  

  <definition class="compliance" id="service_atd_disabled" version="2">
    <metadata>
        <title>Disable At Service (atd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The atd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package at removed or service and socket atd are not configured to start" operator="OR">
      <criterion comment="at removed" test_ref="test_service_atd_package_at_removed" />
      <criteria operator="AND" comment="service and socket atd are disabled">
        <criterion comment="atd disabled in multi-user.target" test_ref="test_atd_disabled_multi_user_target" />
        <criterion comment="atd socket disabled in sockets.target" test_ref="test_atd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for atd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_atd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_atd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for atd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_atd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/atd.service</unix:filepath>
    <filter action="include">unit_atd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for atd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_atd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_atd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for atd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_atd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/atd.socket</unix:filepath>
    <filter action="include">unit_atd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_atd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_atd_package_at_removed" version="1"
  comment="package at is removed">
    <linux:object object_ref="obj_test_service_atd_package_at_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_atd_package_at_removed" version="1">
    <linux:name>at</linux:name>
  </linux:rpminfo_object>


</def-group>