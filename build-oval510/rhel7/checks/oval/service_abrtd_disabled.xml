<def-group>

  

  

  <definition class="compliance" id="service_abrtd_disabled" version="2">
    <metadata>
        <title>Disable Automatic Bug Reporting Tool (abrtd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The abrtd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package abrt removed or service and socket abrtd are not configured to start" operator="OR">
      <criterion comment="abrt removed" test_ref="test_service_abrtd_package_abrt_removed" />
      <criteria operator="AND" comment="service and socket abrtd are disabled">
        <criterion comment="abrtd disabled in multi-user.target" test_ref="test_abrtd_disabled_multi_user_target" />
        <criterion comment="abrtd socket disabled in sockets.target" test_ref="test_abrtd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for abrtd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_abrtd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_abrtd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for abrtd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_abrtd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/abrtd.service</unix:filepath>
    <filter action="include">unit_abrtd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for abrtd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_abrtd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_abrtd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for abrtd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_abrtd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/abrtd.socket</unix:filepath>
    <filter action="include">unit_abrtd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_abrtd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_abrtd_package_abrt_removed" version="1"
  comment="package abrt is removed">
    <linux:object object_ref="obj_test_service_abrtd_package_abrt_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_abrtd_package_abrt_removed" version="1">
    <linux:name>abrt</linux:name>
  </linux:rpminfo_object>


</def-group>