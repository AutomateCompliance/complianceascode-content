<def-group>

  

  

  <definition class="compliance" id="service_named_disabled" version="2">
    <metadata>
        <title>Disable named Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The named service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package bind removed or service and socket named are not configured to start" operator="OR">
      <criterion comment="bind removed" test_ref="test_service_named_package_bind_removed" />
      <criteria operator="AND" comment="service and socket named are disabled">
        <criterion comment="named disabled in multi-user.target" test_ref="test_named_disabled_multi_user_target" />
        <criterion comment="named socket disabled in sockets.target" test_ref="test_named_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for named.service in /etc/systemd/system/multi-user.target.wants"
   id="test_named_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_named_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for named.service in /etc/systemd/system/multi-user.target.wants"
   id="object_named_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/named.service</unix:filepath>
    <filter action="include">unit_named_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for named.socket in /etc/systemd/system/sockets.target.wants"
   id="test_named_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_named_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for named.socket in /etc/systemd/system/sockets.target.wants"
   id="object_named_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/named.socket</unix:filepath>
    <filter action="include">unit_named_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_named_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_named_package_bind_removed" version="1"
  comment="package bind is removed">
    <linux:object object_ref="obj_test_service_named_package_bind_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_named_package_bind_removed" version="1">
    <linux:name>bind</linux:name>
  </linux:rpminfo_object>


</def-group>