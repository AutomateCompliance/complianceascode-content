<def-group>

  

  

  <definition class="compliance" id="service_smartd_disabled" version="2">
    <metadata>
        <title>Disable SMART Disk Monitoring Service (smartd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The smartd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package smartmontools removed or service and socket smartd are not configured to start" operator="OR">
      <criterion comment="smartmontools removed" test_ref="test_service_smartd_package_smartmontools_removed" />
      <criteria operator="AND" comment="service and socket smartd are disabled">
        <criterion comment="smartd disabled in multi-user.target" test_ref="test_smartd_disabled_multi_user_target" />
        <criterion comment="smartd socket disabled in sockets.target" test_ref="test_smartd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for smartd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_smartd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_smartd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for smartd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_smartd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/smartd.service</unix:filepath>
    <filter action="include">unit_smartd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for smartd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_smartd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_smartd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for smartd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_smartd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/smartd.socket</unix:filepath>
    <filter action="include">unit_smartd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_smartd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_smartd_package_smartmontools_removed" version="1"
  comment="package smartmontools is removed">
    <linux:object object_ref="obj_test_service_smartd_package_smartmontools_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_smartd_package_smartmontools_removed" version="1">
    <linux:name>smartmontools</linux:name>
  </linux:rpminfo_object>


</def-group>