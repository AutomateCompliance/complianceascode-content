<def-group>

  

  

  <definition class="compliance" id="service_messagebus_disabled" version="2">
    <metadata>
        <title>Disable D-Bus IPC Service (messagebus)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The messagebus service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package dbus removed or service and socket messagebus are not configured to start" operator="OR">
      <criterion comment="dbus removed" test_ref="test_service_messagebus_package_dbus_removed" />
      <criteria operator="AND" comment="service and socket messagebus are disabled">
        <criterion comment="messagebus disabled in multi-user.target" test_ref="test_messagebus_disabled_multi_user_target" />
        <criterion comment="messagebus socket disabled in sockets.target" test_ref="test_messagebus_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for messagebus.service in /etc/systemd/system/multi-user.target.wants"
   id="test_messagebus_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_messagebus_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for messagebus.service in /etc/systemd/system/multi-user.target.wants"
   id="object_messagebus_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/messagebus.service</unix:filepath>
    <filter action="include">unit_messagebus_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for messagebus.socket in /etc/systemd/system/sockets.target.wants"
   id="test_messagebus_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_messagebus_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for messagebus.socket in /etc/systemd/system/sockets.target.wants"
   id="object_messagebus_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/messagebus.socket</unix:filepath>
    <filter action="include">unit_messagebus_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_messagebus_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_messagebus_package_dbus_removed" version="1"
  comment="package dbus is removed">
    <linux:object object_ref="obj_test_service_messagebus_package_dbus_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_messagebus_package_dbus_removed" version="1">
    <linux:name>dbus</linux:name>
  </linux:rpminfo_object>


</def-group>