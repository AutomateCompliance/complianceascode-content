<def-group>

  

  

  <definition class="compliance" id="service_avahi-daemon_disabled" version="2">
    <metadata>
        <title>Disable Avahi Server Software</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The avahi-daemon service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package avahi removed or service and socket avahi-daemon are not configured to start" operator="OR">
      <criterion comment="avahi removed" test_ref="test_service_avahi-daemon_package_avahi_removed" />
      <criteria operator="AND" comment="service and socket avahi-daemon are disabled">
        <criterion comment="avahi-daemon disabled in multi-user.target" test_ref="test_avahi-daemon_disabled_multi_user_target" />
        <criterion comment="avahi-daemon socket disabled in sockets.target" test_ref="test_avahi-daemon_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for avahi-daemon.service in /etc/systemd/system/multi-user.target.wants"
   id="test_avahi-daemon_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_avahi-daemon_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for avahi-daemon.service in /etc/systemd/system/multi-user.target.wants"
   id="object_avahi-daemon_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/avahi-daemon.service</unix:filepath>
    <filter action="include">unit_avahi-daemon_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for avahi-daemon.socket in /etc/systemd/system/sockets.target.wants"
   id="test_avahi-daemon_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_avahi-daemon_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for avahi-daemon.socket in /etc/systemd/system/sockets.target.wants"
   id="object_avahi-daemon_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/avahi-daemon.socket</unix:filepath>
    <filter action="include">unit_avahi-daemon_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_avahi-daemon_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_avahi-daemon_package_avahi_removed" version="1"
  comment="package avahi is removed">
    <linux:object object_ref="obj_test_service_avahi-daemon_package_avahi_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_avahi-daemon_package_avahi_removed" version="1">
    <linux:name>avahi</linux:name>
  </linux:rpminfo_object>


</def-group>