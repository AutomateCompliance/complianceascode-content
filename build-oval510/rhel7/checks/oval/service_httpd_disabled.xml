<def-group>

  

  

  <definition class="compliance" id="service_httpd_disabled" version="2">
    <metadata>
        <title>Disable httpd Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The httpd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package httpd removed or service and socket httpd are not configured to start" operator="OR">
      <criterion comment="httpd removed" test_ref="test_service_httpd_package_httpd_removed" />
      <criteria operator="AND" comment="service and socket httpd are disabled">
        <criterion comment="httpd disabled in multi-user.target" test_ref="test_httpd_disabled_multi_user_target" />
        <criterion comment="httpd socket disabled in sockets.target" test_ref="test_httpd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for httpd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_httpd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_httpd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for httpd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_httpd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/httpd.service</unix:filepath>
    <filter action="include">unit_httpd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for httpd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_httpd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_httpd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for httpd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_httpd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/httpd.socket</unix:filepath>
    <filter action="include">unit_httpd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_httpd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_httpd_package_httpd_removed" version="1"
  comment="package httpd is removed">
    <linux:object object_ref="obj_test_service_httpd_package_httpd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_httpd_package_httpd_removed" version="1">
    <linux:name>httpd</linux:name>
  </linux:rpminfo_object>


</def-group>