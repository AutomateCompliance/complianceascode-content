<def-group>

  

  

  <definition class="compliance" id="service_rhsmcertd_disabled" version="2">
    <metadata>
        <title>Disable Red Hat Subscription Manager Daemon (rhsmcertd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rhsmcertd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package subscription-manager removed or service and socket rhsmcertd are not configured to start" operator="OR">
      <criterion comment="subscription-manager removed" test_ref="test_service_rhsmcertd_package_subscription-manager_removed" />
      <criteria operator="AND" comment="service and socket rhsmcertd are disabled">
        <criterion comment="rhsmcertd disabled in multi-user.target" test_ref="test_rhsmcertd_disabled_multi_user_target" />
        <criterion comment="rhsmcertd socket disabled in sockets.target" test_ref="test_rhsmcertd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rhsmcertd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_rhsmcertd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_rhsmcertd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for rhsmcertd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_rhsmcertd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/rhsmcertd.service</unix:filepath>
    <filter action="include">unit_rhsmcertd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rhsmcertd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_rhsmcertd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_rhsmcertd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for rhsmcertd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_rhsmcertd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/rhsmcertd.socket</unix:filepath>
    <filter action="include">unit_rhsmcertd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_rhsmcertd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rhsmcertd_package_subscription-manager_removed" version="1"
  comment="package subscription-manager is removed">
    <linux:object object_ref="obj_test_service_rhsmcertd_package_subscription-manager_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rhsmcertd_package_subscription-manager_removed" version="1">
    <linux:name>subscription-manager</linux:name>
  </linux:rpminfo_object>


</def-group>