<def-group>

  

  

  <definition class="compliance" id="service_sshd_disabled" version="2">
    <metadata>
        <title>Disable SSH Server If Possible (Unusual)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The sshd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package openssh-server removed or service and socket sshd are not configured to start" operator="OR">
      <criterion comment="openssh-server removed" test_ref="test_service_sshd_package_openssh-server_removed" />
      <criteria operator="AND" comment="service and socket sshd are disabled">
        <criterion comment="sshd disabled in multi-user.target" test_ref="test_sshd_disabled_multi_user_target" />
        <criterion comment="sshd socket disabled in sockets.target" test_ref="test_sshd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for sshd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_sshd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_sshd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for sshd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_sshd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/sshd.service</unix:filepath>
    <filter action="include">unit_sshd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for sshd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_sshd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_sshd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for sshd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_sshd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/sshd.socket</unix:filepath>
    <filter action="include">unit_sshd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_sshd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_sshd_package_openssh-server_removed" version="1"
  comment="package openssh-server is removed">
    <linux:object object_ref="obj_test_service_sshd_package_openssh-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_sshd_package_openssh-server_removed" version="1">
    <linux:name>openssh-server</linux:name>
  </linux:rpminfo_object>


</def-group>