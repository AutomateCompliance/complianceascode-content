<def-group>

  

  

  <definition class="compliance" id="service_netfs_disabled" version="2">
    <metadata>
        <title>Disable Network File Systems (netfs)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The netfs service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package netfs removed or service and socket netfs are not configured to start" operator="OR">
      <criterion comment="netfs removed" test_ref="test_service_netfs_package_netfs_removed" />
      <criteria operator="AND" comment="service and socket netfs are disabled">
        <criterion comment="netfs disabled in multi-user.target" test_ref="test_netfs_disabled_multi_user_target" />
        <criterion comment="netfs socket disabled in sockets.target" test_ref="test_netfs_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for netfs.service in /etc/systemd/system/multi-user.target.wants"
   id="test_netfs_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_netfs_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for netfs.service in /etc/systemd/system/multi-user.target.wants"
   id="object_netfs_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/netfs.service</unix:filepath>
    <filter action="include">unit_netfs_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for netfs.socket in /etc/systemd/system/sockets.target.wants"
   id="test_netfs_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_netfs_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for netfs.socket in /etc/systemd/system/sockets.target.wants"
   id="object_netfs_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/netfs.socket</unix:filepath>
    <filter action="include">unit_netfs_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_netfs_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_netfs_package_netfs_removed" version="1"
  comment="package netfs is removed">
    <linux:object object_ref="obj_test_service_netfs_package_netfs_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_netfs_package_netfs_removed" version="1">
    <linux:name>netfs</linux:name>
  </linux:rpminfo_object>


</def-group>