<def-group>

  

  

  <definition class="compliance" id="service_autofs_disabled" version="2">
    <metadata>
        <title>Disable the Automounter</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The autofs service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package autofs removed or service and socket autofs are not configured to start" operator="OR">
      <criterion comment="autofs removed" test_ref="test_service_autofs_package_autofs_removed" />
      <criteria operator="AND" comment="service and socket autofs are disabled">
        <criterion comment="autofs disabled in multi-user.target" test_ref="test_autofs_disabled_multi_user_target" />
        <criterion comment="autofs socket disabled in sockets.target" test_ref="test_autofs_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for autofs.service in /etc/systemd/system/multi-user.target.wants"
   id="test_autofs_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_autofs_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for autofs.service in /etc/systemd/system/multi-user.target.wants"
   id="object_autofs_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/autofs.service</unix:filepath>
    <filter action="include">unit_autofs_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for autofs.socket in /etc/systemd/system/sockets.target.wants"
   id="test_autofs_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_autofs_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for autofs.socket in /etc/systemd/system/sockets.target.wants"
   id="object_autofs_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/autofs.socket</unix:filepath>
    <filter action="include">unit_autofs_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_autofs_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_autofs_package_autofs_removed" version="1"
  comment="package autofs is removed">
    <linux:object object_ref="obj_test_service_autofs_package_autofs_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_autofs_package_autofs_removed" version="1">
    <linux:name>autofs</linux:name>
  </linux:rpminfo_object>


</def-group>