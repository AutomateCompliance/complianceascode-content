    <unix:state state_ref="state_service_systemd-timesyncd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel5_systemd-timesyncd_on"
  version="2">
    <unix:object object_ref="obj_runlevel5_systemd-timesyncd_on" />
    <unix:state state_ref="state_service_systemd-timesyncd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
