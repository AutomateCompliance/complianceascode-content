    <unix:runlevel operation="equals">0</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel1_systemd-timesyncd_on" version="1">
    <unix:service_name>systemd-timesyncd</unix:service_name>
    <unix:runlevel operation="equals">1</unix:runlevel>
