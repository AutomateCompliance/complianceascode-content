<def-group>

  <definition class="compliance" id="service_timesyncd_enabled"
  version="1">
    <metadata>
        <title>Enable systemd_timesyncd Service</title>
        
    <affected family="unix">
    <platform>Ubuntu 16.04</platform>
    </affected>
        <description>The systemd-timesyncd service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package systemd installed and service systemd-timesyncd is configured to start" operator="AND">
    <criterion comment="systemd installed" test_ref="test_service_systemd-timesyncd_package_systemd_installed" />
    <criteria operator="OR" comment="service systemd-timesyncd is configured to start">
      <criterion comment="systemd-timesyncd runlevel 0" test_ref="test_runlevel0_systemd-timesyncd_on" />
      <criterion comment="systemd-timesyncd runlevel 1" test_ref="test_runlevel1_systemd-timesyncd_on" />
      <criterion comment="systemd-timesyncd runlevel 2" test_ref="test_runlevel2_systemd-timesyncd_on" />
      <criterion comment="systemd-timesyncd runlevel 3" test_ref="test_runlevel3_systemd-timesyncd_on" />
      <criterion comment="systemd-timesyncd runlevel 4" test_ref="test_runlevel4_systemd-timesyncd_on" />
      <criterion comment="systemd-timesyncd runlevel 5" test_ref="test_runlevel5_systemd-timesyncd_on" />
      <criterion comment="systemd-timesyncd runlevel 6" test_ref="test_runlevel6_systemd-timesyncd_on" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_systemd-timesyncd_on"
  version="2">
    <unix:object object_ref="obj_runlevel0_systemd-timesyncd_on" />
    <unix:state state_ref="state_service_systemd-timesyncd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel1_systemd-timesyncd_on"
  version="2">
    <unix:object object_ref="obj_runlevel1_systemd-timesyncd_on" />
    <unix:state state_ref="state_service_systemd-timesyncd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel2_systemd-timesyncd_on"
  version="2">
    <unix:object object_ref="obj_runlevel2_systemd-timesyncd_on" />
    <unix:state state_ref="state_service_systemd-timesyncd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
