<def-group>

  

  

  <definition class="compliance" id="service_xinetd_disabled" version="2">
    <metadata>
        <title>Disable xinetd Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The xinetd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package xinetd removed or service and socket xinetd are not configured to start" operator="OR">
      <criterion comment="xinetd removed" test_ref="test_service_xinetd_package_xinetd_removed" />
      <criteria operator="AND" comment="service and socket xinetd are disabled">
        <criterion comment="xinetd disabled in multi-user.target" test_ref="test_xinetd_disabled_multi_user_target" />
        <criterion comment="xinetd socket disabled in sockets.target" test_ref="test_xinetd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for xinetd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_xinetd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_xinetd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for xinetd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_xinetd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/xinetd.service</unix:filepath>
    <filter action="include">unit_xinetd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for xinetd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_xinetd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_xinetd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for xinetd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_xinetd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/xinetd.socket</unix:filepath>
    <filter action="include">unit_xinetd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_xinetd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_xinetd_package_xinetd_removed" version="1"
  comment="package xinetd is removed">
    <linux:object object_ref="obj_test_service_xinetd_package_xinetd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_xinetd_package_xinetd_removed" version="1">
    <linux:name>xinetd</linux:name>
  </linux:rpminfo_object>


</def-group>