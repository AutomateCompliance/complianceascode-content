<def-group>

  

  

  <definition class="compliance" id="service_apport_disabled" version="2">
    <metadata>
        <title>Disable Apport Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The apport service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package apport removed or service and socket apport are not configured to start" operator="OR">
      <criterion comment="apport removed" test_ref="test_service_apport_package_apport_removed" />
      <criteria operator="AND" comment="service and socket apport are disabled">
        <criterion comment="apport disabled in multi-user.target" test_ref="test_apport_disabled_multi_user_target" />
        <criterion comment="apport socket disabled in sockets.target" test_ref="test_apport_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for apport.service in /etc/systemd/system/multi-user.target.wants"
   id="test_apport_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_apport_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for apport.service in /etc/systemd/system/multi-user.target.wants"
   id="object_apport_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/apport.service</unix:filepath>
    <filter action="include">unit_apport_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for apport.socket in /etc/systemd/system/sockets.target.wants"
   id="test_apport_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_apport_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for apport.socket in /etc/systemd/system/sockets.target.wants"
   id="object_apport_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/apport.socket</unix:filepath>
    <filter action="include">unit_apport_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_apport_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:dpkginfo_test check="all" check_existence="none_exist"
  id="test_service_apport_package_apport_removed" version="1"
  comment="package apport is removed">
    <linux:object object_ref="obj_test_service_apport_package_apport_removed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_service_apport_package_apport_removed" version="1">
    <linux:name>apport</linux:name>
  </linux:dpkginfo_object>


</def-group>