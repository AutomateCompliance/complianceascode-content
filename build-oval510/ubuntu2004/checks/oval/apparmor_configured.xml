  </unix:runlevel_object>
  <unix:runlevel_state comment="configured to start" id="state_service_apparmor_on" version="1">
    <unix:start datatype="boolean">true</unix:start>
    <unix:kill datatype="boolean">false</unix:kill>
  </unix:runlevel_state>



  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_service_apparmor_package_apparmor_installed" version="1"
  comment="package apparmor is installed">
    <linux:object object_ref="obj_test_service_apparmor_package_apparmor_installed" />
    
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_test_service_apparmor_package_apparmor_installed" version="1">
    <linux:name>apparmor</linux:name>
  </linux:dpkginfo_object>
  

