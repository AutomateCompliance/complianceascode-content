<def-group>

  <definition class="compliance" id="apparmor_configured"
  version="1">
    <metadata>
        <title>Ensure AppArmor is Active and Configured</title>
        
    <affected family="unix">
    <platform>Ubuntu 20.04</platform>
    </affected>
        <description>The apparmor service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package apparmor installed and service apparmor is configured to start" operator="AND">
    <criterion comment="apparmor installed" test_ref="test_service_apparmor_package_apparmor_installed" />
    <criteria operator="OR" comment="service apparmor is configured to start">
      <criterion comment="apparmor runlevel 0" test_ref="test_runlevel0_apparmor_on" />
      <criterion comment="apparmor runlevel 1" test_ref="test_runlevel1_apparmor_on" />
      <criterion comment="apparmor runlevel 2" test_ref="test_runlevel2_apparmor_on" />
      <criterion comment="apparmor runlevel 3" test_ref="test_runlevel3_apparmor_on" />
      <criterion comment="apparmor runlevel 4" test_ref="test_runlevel4_apparmor_on" />
      <criterion comment="apparmor runlevel 5" test_ref="test_runlevel5_apparmor_on" />
      <criterion comment="apparmor runlevel 6" test_ref="test_runlevel6_apparmor_on" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel0_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel1_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel1_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel2_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel2_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel3_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel3_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel4_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel4_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel5_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel5_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel6_apparmor_on"
  version="2">
    <unix:object object_ref="obj_runlevel6_apparmor_on" />
    <unix:state state_ref="state_service_apparmor_on" />
  </unix:runlevel_test>
  <unix:runlevel_object id="obj_runlevel0_apparmor_on" version="1">
    <unix:service_name>apparmor</unix:service_name>
    <unix:runlevel operation="equals">0</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel1_apparmor_on" version="1">
    <unix:service_name>apparmor</unix:service_name>
    <unix:runlevel operation="equals">1</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel2_apparmor_on" version="1">
    <unix:service_name>apparmor</unix:service_name>
    <unix:runlevel operation="equals">2</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel3_apparmor_on" version="1">
    <unix:service_name>apparmor</unix:service_name>
    <unix:runlevel operation="equals">3</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel4_apparmor_on" version="1">
    <unix:service_name>apparmor</unix:service_name>
