<def-group>

  

  

  <definition class="compliance" id="service_rexec_disabled" version="2">
    <metadata>
        <title>Disable rexec Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rexec service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rsh-server removed or service and socket rexec are not configured to start" operator="OR">
      <criterion comment="rsh-server removed" test_ref="test_service_rexec_package_rsh-server_removed" />
      <criteria operator="AND" comment="service and socket rexec are disabled">
        <criterion comment="rexec disabled in multi-user.target" test_ref="test_rexec_disabled_multi_user_target" />
        <criterion comment="rexec socket disabled in sockets.target" test_ref="test_rexec_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rexec.service in /etc/systemd/system/multi-user.target.wants"
   id="test_rexec_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_rexec_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for rexec.service in /etc/systemd/system/multi-user.target.wants"
   id="object_rexec_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/rexec.service</unix:filepath>
    <filter action="include">unit_rexec_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rexec.socket in /etc/systemd/system/sockets.target.wants"
   id="test_rexec_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_rexec_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for rexec.socket in /etc/systemd/system/sockets.target.wants"
   id="object_rexec_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/rexec.socket</unix:filepath>
    <filter action="include">unit_rexec_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_rexec_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rexec_package_rsh-server_removed" version="1"
  comment="package rsh-server is removed">
    <linux:object object_ref="obj_test_service_rexec_package_rsh-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rexec_package_rsh-server_removed" version="1">
    <linux:name>rsh-server</linux:name>
  </linux:rpminfo_object>


</def-group>