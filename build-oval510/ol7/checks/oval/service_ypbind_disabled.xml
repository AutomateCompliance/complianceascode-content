<def-group>

  

  

  <definition class="compliance" id="service_ypbind_disabled" version="2">
    <metadata>
        <title>Disable ypbind Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The ypbind service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package ypbind removed or service and socket ypbind are not configured to start" operator="OR">
      <criterion comment="ypbind removed" test_ref="test_service_ypbind_package_ypbind_removed" />
      <criteria operator="AND" comment="service and socket ypbind are disabled">
        <criterion comment="ypbind disabled in multi-user.target" test_ref="test_ypbind_disabled_multi_user_target" />
        <criterion comment="ypbind socket disabled in sockets.target" test_ref="test_ypbind_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for ypbind.service in /etc/systemd/system/multi-user.target.wants"
   id="test_ypbind_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_ypbind_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for ypbind.service in /etc/systemd/system/multi-user.target.wants"
   id="object_ypbind_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/ypbind.service</unix:filepath>
    <filter action="include">unit_ypbind_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for ypbind.socket in /etc/systemd/system/sockets.target.wants"
   id="test_ypbind_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_ypbind_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for ypbind.socket in /etc/systemd/system/sockets.target.wants"
   id="object_ypbind_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/ypbind.socket</unix:filepath>
    <filter action="include">unit_ypbind_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_ypbind_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_ypbind_package_ypbind_removed" version="1"
  comment="package ypbind is removed">
    <linux:object object_ref="obj_test_service_ypbind_package_ypbind_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_ypbind_package_ypbind_removed" version="1">
    <linux:name>ypbind</linux:name>
  </linux:rpminfo_object>


</def-group>