<def-group>
  <definition class="compliance" id="mount_option_boot_noauto" version="1">
    <metadata>
        <title>Add noauto Option to /boot</title>
        
    <affected family="unix">
    <platform>Fedora</platform>
    </affected>
        <description>/boot should be mounted with mount option noauto.</description>
    </metadata>
    <criteria operator="OR">
      <criterion comment="noauto on /boot" test_ref="test_boot_partition_noauto_optional_yes" />

    </criteria>
  </definition>

  <linux:partition_test check="all" check_existence="all_exist"
  id="test_boot_partition_noauto_optional_yes" version="1" comment="noauto on /boot optional yes">
    <linux:object object_ref="object_boot_partition_noauto_optional_yes" />
    <linux:state state_ref="state_boot_partition_noauto_optional_yes" />
  </linux:partition_test>

  <linux:partition_object id="object_boot_partition_noauto_optional_yes" version="1">
    <linux:mount_point>/boot</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_boot_partition_noauto_optional_yes" version="1">
    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">noauto</linux:mount_options>
  </linux:partition_state>
</def-group>