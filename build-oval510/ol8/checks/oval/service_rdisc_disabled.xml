<def-group>

  

  

  <definition class="compliance" id="service_rdisc_disabled" version="2">
    <metadata>
        <title>Disable Network Router Discovery Daemon (rdisc)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rdisc service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package iputils removed or service and socket rdisc are not configured to start" operator="OR">
      <criterion comment="iputils removed" test_ref="test_service_rdisc_package_iputils_removed" />
      <criteria operator="AND" comment="service and socket rdisc are disabled">
        <criterion comment="rdisc disabled in multi-user.target" test_ref="test_rdisc_disabled_multi_user_target" />
        <criterion comment="rdisc socket disabled in sockets.target" test_ref="test_rdisc_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rdisc.service in /etc/systemd/system/multi-user.target.wants"
   id="test_rdisc_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_rdisc_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for rdisc.service in /etc/systemd/system/multi-user.target.wants"
   id="object_rdisc_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/rdisc.service</unix:filepath>
    <filter action="include">unit_rdisc_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rdisc.socket in /etc/systemd/system/sockets.target.wants"
   id="test_rdisc_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_rdisc_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for rdisc.socket in /etc/systemd/system/sockets.target.wants"
   id="object_rdisc_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/rdisc.socket</unix:filepath>
    <filter action="include">unit_rdisc_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_rdisc_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rdisc_package_iputils_removed" version="1"
  comment="package iputils is removed">
    <linux:object object_ref="obj_test_service_rdisc_package_iputils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rdisc_package_iputils_removed" version="1">
    <linux:name>iputils</linux:name>
  </linux:rpminfo_object>


</def-group>