<def-group>
  <definition class="compliance" id="grub2_ipv6_disable_argument" version="2">
    <metadata>
        <title>Ensure IPv6 is disabled through kernel boot parameter</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux CoreOS 4</platform>
    </affected>
        <description>Ensure ipv6.disable=1 is configured in the kernel line in /etc/default/grub.</description>
    </metadata>
    <criteria operator="AND">
      
        <criterion test_ref="test_grub2_ipv6_disable_argument_grub_env"
        comment="Check if ipv6.disable=1 is present in the GRUB2 environment variable block in /boot/grub2/grubenv" />
      
    </criteria>
  </definition>



  <ind:textfilecontent54_test id="test_grub2_ipv6_disable_argument_grub_env"
  comment="check forkernel command line parameters ipv6.disable=1 in /boot/grub2/grubenv for all kernels"
  check="all" check_existence="all_exist" version="1">
    <ind:object object_ref="object_grub2_ipv6_disable_argument_grub_env" />
    <ind:state state_ref="state_grub2_ipv6_disable_argument" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_grub2_ipv6_disable_argument_grub_env"
  version="1">
    <ind:filepath>/boot/grub2/grubenv</ind:filepath>
    <ind:pattern operation="pattern match">^kernelopts=(.*)$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>



  <ind:textfilecontent54_state id="state_grub2_ipv6_disable_argument"
  version="1">
    <ind:subexpression datatype="string" operation="pattern match">^(?:.*\s)?ipv6\.disable=1(?:\s.*)?$</ind:subexpression>
  </ind:textfilecontent54_state>

</def-group>