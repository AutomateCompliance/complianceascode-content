<def-group>

  

  

  <definition class="compliance" id="service_rpcbind_disabled" version="2">
    <metadata>
        <title>Disable rpcbind Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rpcbind service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package nfs-utils removed or service and socket rpcbind are not configured to start" operator="OR">
      <criterion comment="nfs-utils removed" test_ref="test_service_rpcbind_package_nfs-utils_removed" />
      <criteria operator="AND" comment="service and socket rpcbind are disabled">
        <criterion comment="rpcbind disabled in multi-user.target" test_ref="test_rpcbind_disabled_multi_user_target" />
        <criterion comment="rpcbind socket disabled in sockets.target" test_ref="test_rpcbind_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rpcbind.service in /etc/systemd/system/multi-user.target.wants"
   id="test_rpcbind_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_rpcbind_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for rpcbind.service in /etc/systemd/system/multi-user.target.wants"
   id="object_rpcbind_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/rpcbind.service</unix:filepath>
    <filter action="include">unit_rpcbind_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for rpcbind.socket in /etc/systemd/system/sockets.target.wants"
   id="test_rpcbind_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_rpcbind_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for rpcbind.socket in /etc/systemd/system/sockets.target.wants"
   id="object_rpcbind_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/rpcbind.socket</unix:filepath>
    <filter action="include">unit_rpcbind_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_rpcbind_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rpcbind_package_nfs-utils_removed" version="1"
  comment="package nfs-utils is removed">
    <linux:object object_ref="obj_test_service_rpcbind_package_nfs-utils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rpcbind_package_nfs-utils_removed" version="1">
    <linux:name>nfs-utils</linux:name>
  </linux:rpminfo_object>


</def-group>