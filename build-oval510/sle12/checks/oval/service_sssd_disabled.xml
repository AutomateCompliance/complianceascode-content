<def-group>

  

  

  <definition class="compliance" id="service_sssd_disabled" version="2">
    <metadata>
        <title>service_sssd_disabled</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The sssd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package sssd removed or service and socket sssd are not configured to start" operator="OR">
      <criterion comment="sssd removed" test_ref="test_service_sssd_package_sssd_removed" />
      <criteria operator="AND" comment="service and socket sssd are disabled">
        <criterion comment="sssd disabled in multi-user.target" test_ref="test_sssd_disabled_multi_user_target" />
        <criterion comment="sssd socket disabled in sockets.target" test_ref="test_sssd_socket_disabled_sockets_target" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for sssd.service in /etc/systemd/system/multi-user.target.wants"
   id="test_sssd_disabled_multi_user_target" version="1">
    <unix:object object_ref="object_sssd_disabled_multi_user_target" />
  </unix:file_test>

  <unix:file_object comment="look for sssd.service in /etc/systemd/system/multi-user.target.wants"
   id="object_sssd_disabled_multi_user_target" version="1">
    <unix:filepath>/etc/systemd/system/multi-user.target.wants/sssd.service</unix:filepath>
    <filter action="include">unit_sssd_state_symlink</filter>
  </unix:file_object>

  <unix:file_test check="all" check_existence="none_exist"
   comment="look for sssd.socket in /etc/systemd/system/sockets.target.wants"
   id="test_sssd_socket_disabled_sockets_target" version="1">
    <unix:object object_ref="object_sssd_socket_disabled_sockets_target" />
  </unix:file_test>

  <unix:file_object comment="look for sssd.socket in /etc/systemd/system/sockets.target.wants"
   id="object_sssd_socket_disabled_sockets_target" version="1">
    <unix:filepath>/etc/systemd/system/sockets.target.wants/sssd.socket</unix:filepath>
    <filter action="include">unit_sssd_state_symlink</filter>
  </unix:file_object>

  <unix:file_state id="unit_sssd_state_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

  




  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_sssd_package_sssd_removed" version="1"
  comment="package sssd is removed">
    <linux:object object_ref="obj_test_service_sssd_package_sssd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_sssd_package_sssd_removed" version="1">
    <linux:name>sssd</linux:name>
  </linux:rpminfo_object>


</def-group>