<def-group>
  <definition class="compliance" id="mount_option_var_noexec" version="1">
    <metadata>
        <title>Add noexec Option to /var</title>
        
    <affected family="unix">
    <platform>Red Hat Virtualization 4</platform>
    </affected>
        <description>/var should be mounted with mount option noexec.</description>
    </metadata>
    <criteria operator="OR">
      <criterion comment="noexec on /var" test_ref="test_var_partition_noexec_optional_yes" />

    </criteria>
  </definition>

  <linux:partition_test check="all" check_existence="all_exist"
  id="test_var_partition_noexec_optional_yes" version="1" comment="noexec on /var optional yes">
    <linux:object object_ref="object_var_partition_noexec_optional_yes" />
    <linux:state state_ref="state_var_partition_noexec_optional_yes" />
  </linux:partition_test>

  <linux:partition_object id="object_var_partition_noexec_optional_yes" version="1">
    <linux:mount_point>/var</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_var_partition_noexec_optional_yes" version="1">
    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">noexec</linux:mount_options>
  </linux:partition_state>
</def-group>