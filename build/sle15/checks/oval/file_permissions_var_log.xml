
    
  <def-group>
  <definition class="compliance" id="file_permissions_var_log" version="1">
    <metadata>
        <title>Verify Permissions on /var/log Directory</title>
        
    <affected family="unix">
    <platform>SUSE Linux Enterprise 15</platform>
    </affected>
        <description>This test makes sure that /var/log/ has mode 0755.
      If the target file or directory has an extended ACL, then it will fail the mode check.
      </description>
    </metadata>
    <criteria>
      <criterion comment="Check file mode of /var/log/" test_ref="test_file_permissions_var_log" negate="true"/>
    </criteria>
  </definition>
      <unix:file_test check="all" check_existence="at_least_one_exists" comment="Testing mode of /var/log/" id="test_file_permissions_var_log" version="2">
      <unix:object object_ref="object_file_permissions_var_log" />
      <unix:state state_ref="state_file_permissions_var_log_mode_not_0755" />
    </unix:file_test>
    <unix:file_state id="state_file_permissions_var_log_mode_not_0755" operator="OR" version="2">
      <unix:suid datatype="boolean">true</unix:suid>
      <unix:sgid datatype="boolean">true</unix:sgid>
      <unix:sticky datatype="boolean">true</unix:sticky>
      <unix:gwrite datatype="boolean">true</unix:gwrite>
      <unix:owrite datatype="boolean">true</unix:owrite>
    </unix:file_state>
    <unix:file_object comment="/var/log/" id="object_file_permissions_var_log" version="1">
      <unix:path>/var/log/</unix:path>
      <unix:filename xsi:nil="true" />
      
      <filter action="include">state_file_permissions_var_log_mode_not_0755</filter>

    </unix:file_object>
</def-group>